
<div class="message-item <%= user_id === message.user_id ? 'user-message' : 'other-message' %>">
    <div class="<%= user_id === message.user_id ? 'user-bg' : 'other-bg' %>" style="padding: 10px; border-radius: 8px;">
        <div class="message-header">
            <span class="username">
                <%= message.username %>
            </span>
            <span class="timestamp">
                <%= new Date(message.sent_time).toLocaleString('en-US', { month: '2-digit' , day: '2-digit' ,
                    hour: '2-digit' , minute: '2-digit' , hour12: true }) %>
            </span>
        </div>
        <div class="message-text" style="color: brown;">
            <%= message.text %>
        </div>
        <%- include('emoji_menu', { message: message }) %>
    </div>
</div>